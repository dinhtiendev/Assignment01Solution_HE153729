@model BussinessObject.ProductDto
@using BussinessObject

<form asp-action="ProductDelete">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Product</h1>

        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="ProductId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input type="text" asp-for="ProductId" class="form-control" readonly />
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="ProductName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input type="text" asp-for="ProductName" class="form-control" readonly />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="CategoryId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input type="number" asp-for="CategoryId" class="form-control" readonly />
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Weight" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input type="number" asp-for="Weight" class="form-control" readonly />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="UnitPrice" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input type="number" asp-for="UnitPrice" class="form-control" readonly />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="UnitsInStock" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input type="number" asp-for="UnitsInStock" class="form-control" readonly />
                <span asp-validation-for="UnitsInStock" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="ProductIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-success form-control" />
            </div>
        </div>
        <div>
        </div>
    </div>
</form>
