@model IEnumerable<BussinessObject.MemberDto>


<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Members List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="MemberCreate" class="btn btn-outline-primary"> Create New Member</a>
        </div>
    </div>
    <table id="orderTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Email
                </th>
                <th>
                    CompanyName
                </th>
                <th>
                    City
                </th>
                <th>
                    Country
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model)
            {
                <tr>
                    <td>
                        @member.MemberId
                    </td>
                    <td>
                        @member.Email
                    </td>
                    <td>
                        @member.Company
                    </td>
                    <td>
                        @member.City
                    </td>
                    <td>
                        @member.Country
                    </td>
                    <td>
                        <a asp-action="MemberEdit" class="btn btn-success" asp-route-memberId="@member.MemberId">
                            Edit
                        </a>
                        <a asp-action="MemberDelete" class="btn btn-danger" asp-route-memberId="@member.MemberId">
                            Delete
                        </a>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
</div>